<Window x:Class="Poolhallogo.welcomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Poolhallogo"
        mc:Ignorable="d"
        Title="welcomePage" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="./images/billiard.jfif" Opacity=".6"/>
        </Grid.Background>
        <Grid Grid.Column="0" Grid.ColumnSpan="3" x:Name="poolLabel">
            <Label HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" FontWeight="Bold" Foreground="Black">Pool Hall Press Begin to Play</Label>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="1">
            <Button Opacity=".80" FontSize="40" Click="Button_Click" FontWeight="DemiBold">Begin</Button>
        </Grid>
        
    </Grid>
</Window>
