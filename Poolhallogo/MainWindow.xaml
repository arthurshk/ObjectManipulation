<Window x:Class="Poolhallogo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Poolhallogo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas x:Name="gameCanvas">
        <Rectangle Canvas.Left="100" Canvas.Top="100" Width="600" Height="300" Fill="Green"/>
        <Button Content="Shoot" Command="{Binding ShootCommand}" HorizontalAlignment="Right" Margin="80"></Button>
    </Canvas>
</Window>
